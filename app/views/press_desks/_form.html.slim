#admin-pd-form
  = form_for(@press_desk) do |f|
    = render partial: 'shared/errors', object: @press_desk
    fieldset
      .form-group
        label.form-label for="press_desk_name"  Name
        = f.text_field :name, {class: 'form-control'}
      .form-group
        p.text= t('.status')
        label.block-label for="press_desk_deleted"
          = f.check_box :deleted
          = t('.inactive')
      .form-group
        = f.submit 'Save', :id => 'save', :class => 'button'